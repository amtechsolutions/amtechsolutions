@model BookModel
@{
    ViewData["Title"] = "AddNewBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="display-4">AddNewBook</h3>
    @if (ViewBag.IsSaved)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>New Book Saved</strong> Click <a asp-controller="Book" asp-action="GetBook" asp-route-id="@ViewBag.BookId" > here </a> to view book details.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
    <form method="post" class="m-0">
        @*<div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
            </div>*@
        <div asp-validation-summary="All" class="text-danger">

        </div>
        <div class="row py-3">
            <div class="col-1">
                <label asp-for="Name"></label>
               
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-1">
                <label asp-for="author"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="author" />
                <span asp-validation-for="author" class="text-danger"></span>
            </div>
        </div>
        <div class="row pt-5">
            <div class="col-1">
                <label asp-for="description"></label>
            </div>
            <div class="col-11">
                <textarea class="form-control" asp-for="description"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
        </div>
        <div class="row pt-5">
            <div class="col-1">
                <label asp-for="TotalPages"></label>
            </div>
            <div class="col-4">
                <input asp-for="TotalPages" class="form-control" />
                <span asp-validation-for="TotalPages" class="text-danger"></span>
            </div>
            <div class="col-1">
                <label asp-for="Language"></label>
            </div>
            <div class="col-4">
                @*<select class="form-control" asp-for="Language" >
            <option value="">Choose Language</option>
            <option>English</option>
            <option>Marathi</option>
            <option>Hindi</option>
        </select>*@
                @*<select asp-for="Language" class="form-control" asp-items="new SelectList(ViewBag.Language)">*@
                <select asp-for="Language" asp-items="ViewBag.Language" class="form-control">
                    <option value="">Choose Language</option>
                </select>
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Save new book</button>
            </div>
        </div>
    </form>
</div>
